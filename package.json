{
	"name": "@kevinagyeman/easy-picker",
	"version": "1.1.0",
	"description": "Easy picker component for dates, times, and datetimes - compatible with all frontend frameworks",
	"type": "module",
	"main": "./dist/easy-picker.umd.js",
	"module": "./dist/easy-picker.js",
	"types": "./dist/easy-picker.d.ts",
	"exports": {
		".": {
			"types": "./dist/easy-picker.d.ts",
			"import": "./dist/easy-picker.js",
			"require": "./dist/easy-picker.umd.js"
		},
		"./dist/style.css": "./dist/style.css"
	},
	"files": [
		"dist"
	],
	"sideEffects": [
		"*.css",
		"./dist/style.css"
	],
	"keywords": [
		"easy-picker",
		"date-picker",
		"time-picker",
		"datetime-picker",
		"vanilla-js",
		"framework-agnostic",
		"picker",
		"typescript",
		"react",
		"vue",
		"angular",
		"svelte",
		"select-picker",
		"timezone-safe"
	],
	"author": "Kevin Agyeman <kevinagyemann@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/kevinagyeman/easy-picker#readme",
	"bugs": {
		"url": "https://github.com/kevinagyeman/easy-picker/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kevinagyeman/easy-picker.git"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"prepublishOnly": "npm run build",
		"lint": "biome lint",
		"lint:error": "biome lint --diagnostic-level=error",
		"format": "biome format --write",
		"check:fix": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@vitejs/plugin-react": "^4.7.0",
		"rollup": "^4.53.3",
		"typescript": "~5.9.3",
		"vite": "^7.2.4",
		"vite-plugin-dts": "^4.3.0"
	}
}
